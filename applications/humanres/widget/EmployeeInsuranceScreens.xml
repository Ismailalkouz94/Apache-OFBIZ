                <set field="layoutSettings.javaScripts[]" value="/images/BusinessInnovation/js/plugin/jqgrid/jquery.jqGrid.min.js" global="true"/>  
 
            </actions>            
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body"> 
	             <label style="h2" text="Insurance List"/> 
                     <include-menu name="EmployeeInsuranceMenus" location="component://humanres/widget/HumanresMenus.xml"/>
                        <!--<screenlet id="AddTrainingTypePanel" title="${uiLabelMap.CommonAdd} ${uiLabelMap.HumanResTrainingTypes}" collapsible="true">-->
                      <platform-specific>                           
                            <html>
                                <html-template location="component://humanres/widget/forms/Insurance/InsuranceList.ftl"/>

                            </html>
                        </platform-specific> 
                        <!--</screenlet>-->
                    </decorator-section>
                </decorator-screen>
            </widgets>            
        </section>
    </screen>
    
    
