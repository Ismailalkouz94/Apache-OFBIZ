    <screen name="InsuranceList">
        <section>                        
            <actions>
                <set field="tabButtonItem" value="InsuranceList"/>
                <set field="layoutSettings.javaScripts[]" value="/images/jgridTable/jgridGlobal.js" global="true"/>  
